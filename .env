# Copy this file to .env and adjust values as needed
MODEL_NAME=LiheYoung/depth-anything-small-hf
IMAGE_PATH=tests/proof_of_functionality/Mona_Lisa.jpg
OUTPUT_PATH=tests/proof_of_functionality/Mona_Lisa_tactile.stl
RESOLUTION=64

# Height mapping in millimeters for tactile top surface (added above base thickness)
MIN_HEIGHT_MM=0.2
MAX_HEIGHT_MM=2.0

# Base (bottom plate) thickness in millimeters
BASE_THICKNESS_MM=1.0

# XY scale: millimeters per pixel
PIXEL_SCALE_MM=0.2

# Invert heights so darker = higher (true/false)
INVERT_HEIGHTS=false

# Apply Gaussian blur to the input (radius in pixels). 0 disables.
GAUSSIAN_BLUR_RADIUS=0

# Clamp grayscale values before normalization (0..255). Wider range preserves contrast.
CLAMP_MIN=0
CLAMP_MAX=255

# Add a constant border (in pixels) around the image at CLAMP_MIN intensity
BORDER_PIXELS=0

# Optional: your Hugging Face access token (REMOVE THE EXPOSED TOKEN!)
HF_API_TOKEN=
