# Art Tactile Transform Configuration Example
# Copy this file to .env and adjust the values

# Required: Model for depth estimation
MODEL_NAME=Intel/dpt-large

# Required: Input image path
IMAGE_PATH=examples/input.jpg

# Required: Output STL file path
OUTPUT_PATH=output/tactile_model.stl

# Optional: Processing resolution (default: 64)
RESOLUTION=128

# Optional: Physical dimensions in millimeters
MIN_HEIGHT_MM=0.2
MAX_HEIGHT_MM=2.0
BASE_THICKNESS_MM=1.0
PIXEL_SCALE_MM=0.2

# Optional: Image processing parameters
GAUSSIAN_BLUR_RADIUS=0
CLAMP_MIN=0
CLAMP_MAX=255
BORDER_PIXELS=0
INVERT_HEIGHTS=false

# Optional: Logging level (DEBUG, INFO, WARNING, ERROR)
LOG_LEVEL=INFO
